<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.acadpro1">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@drawable/lecture"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lecture"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity android:name=".GetAttendance"
            android:label="AcadPro1"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"/>
        <activity android:name=".ReportAttendance"
            android:label="AcadPro1"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"/>
        <activity android:name=".StudentUpdate"
            android:label="AcadPro1"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Notepad"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
    </application>

</manifest>